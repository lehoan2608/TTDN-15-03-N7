<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View for projects -->
        <record id="view_projects_form" model="ir.ui.view">
            <field name="name">projects.form</field>
            <field name="model">projects</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            
                            <field name="projects_id"/>
                            <field name="projects_name"/>
                            <field name="employees_ids" widget="many2many_tags" options="{'no_create': True, 'no_open': False}"/>
                            <field name="start_date"/>
                            <!-- <field name="end_date"/> -->
                            <field name="actual_end_date"/>
                            <field name="progress"/>
                            <field name="status"/>
                            <!-- <field name="task_ids"/> -->
                            
                        </group>

                        <!-- Thêm notebook để hiển thị Task trong một bảng -->
                        <!-- <notebook>
                            <page string="Công việc">
                                <field name="task_ids">
                                    <tree editable="bottom">
                                        <field name="taskss_name"/>
                                        <field name="projects_id"/>
                                        <field name="assigned_to"/>
                                        <field name="deadline"/>
                                        <field name="priority"/>
                                        <field name="progress"/>
                                        <field name="status"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook> -->

                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View for projects -->
        <record id="view_projects_tree" model="ir.ui.view">
            <field name="name">projects.tree</field>
            <field name="model">projects</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="projects_id"/>
                    <field name="projects_name"/>
                    <field name="employees_ids" widget="many2many_tags" options="{'no_create': True, 'no_open': False}"/>
                    <field name="start_date"/>
                    <!-- <field name="end_date"/> -->
                    <field name="actual_end_date"/>
                    <field name="progress"/>
                    <field name="status"/>
                    <!-- <field name="task_ids"/> -->
                    
                </tree>
            </field>
        </record>

        <!-- Search View for projects -->
        <record id="view_projects_search" model="ir.ui.view">
            <field name="name">projects.search</field>
            <field name="model">projects</field>
            <field name="arch" type="xml">
                <search>
                    <field name="projects_id"/>
                    <field name="projects_name"/>
                    <field name="employees_ids" widget="many2many_tags" options="{'no_open': False}"/>
                    <field name="start_date"/>
                    <!-- <field name="end_date"/> -->
                    <field name="actual_end_date"/>
                    <field name="progress"/>
                    <field name="status"/>
                    <!-- <field name="task_ids"/> -->
                    
                </search>
            </field>
        </record>

        <!-- Action for projects -->
        <record id="action_projects" model="ir.actions.act_window">
        <field name="name">Dự Án</field>
            <field name="res_model">projects</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_projects_search"/>
        </record>

        <menuitem id="menu_projects_root" name="Dự án"/>
        <menuitem id="menu_projects" name="Danh sách dự án" parent="menu_projects_root" action="action_projects"/>
        
    </data>
</odoo>
